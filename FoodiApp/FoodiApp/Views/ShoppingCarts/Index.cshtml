@model IEnumerable<CartItem>
<!DOCTYPE html>
<html lang="en">

<head>
	
</head>
<body>
@if (User.Identity.IsAuthenticated && User.IsInRole("Client"))
{
	

        

	<div class="mt-5 pt-5 pb-5 container-lg">
			<table class="table table-dark table-hover">
				<thead>
					<tr>
						<th scope="col">Name</th>
						<th scope="col">Price</th>
						<th scope="col">Quantity</th>
						<th scope="col">SubTotal</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
				@foreach(var cartitem in Model)
						{
							@if(cartitem.foodItem !=null){
							<tr>
								<td>@cartitem.foodItem.Name</td>
								<td>@cartitem.foodItem.Price</td>
								<td>@cartitem.Quantity <a asp-area="" asp-controller="ShoppingCarts" asp-action="IncrementCartIrem" asp-route-ShoppingCartId="@cartitem.ShoppingCartId" asp-route-foodItemId="@cartitem.foodItem.FoodItemId"><i class="fa-solid fa-plus" style="color: #948f00;"></i></a></td>
								<td>@(cartitem.foodItem.Price * cartitem.Quantity)</td>

							</tr>
						}}
											
					</tbody>
					<tfoot>
					<tr class="table-warning">
						<td>Total</td>
						
						<td>@ViewBag.Total</td>
						<td>
						</td>
						<td></td>
					
					</tr>
					</tfoot>
			</table>
		</div>
	
}

                 






</body>
</html>