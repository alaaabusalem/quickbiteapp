@model IEnumerable<FoodiApp.Models.DTOs.FoodCategoryDTO>
@{
	ViewData["Title"] = "Food Category Page";

}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
	<div class="container-lg mb-5">
		<div class="d-flex flex-row justify-content-end mt-4 mb-4">
			<a style="border:double; padding:10px;" class="newCategoryButton" asp-controller="FoodCategory" asp-action="Create">
				<span class="add-icon"><i class="fa-light fa-plus"></i></span>
				New Category
			</a>
		</div>
		<div class="">
			<table class="table table-dark table-hover">
				<thead>
					<tr>
						<th scope="col">Name</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody >
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">
								<a  asp-controller="FoodItem" asp-action="Details" asp-route-id="@item.FoodCategoryId">@item.Name</a>
							</th>
							<td>
								<a class="newCategoryButton" asp-controller="FoodCategory" asp-action="Update" asp-route-id="@item.FoodCategoryId">Edit</a>
							</td>
							<td>
								<a class="newCategoryButton" asp-controller="FoodCategory" asp-action="Delete" asp-route-id="@item.FoodCategoryId" onclick="return confirm('Are You Sure that You Want To Delete This Food Category ?')">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>

	</div>


}
