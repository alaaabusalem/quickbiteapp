@model CreatFoodItemDTO

@{
	ViewData["Title"] = "Update Food Item";
	var Categories = new SelectList(ViewBag.Categories, "FoodCategoryId", "Name");
}

<div class="form-header-style">
	<h3>Update Food Item</h3>
</div>
<form method="Post" asp-controller="FoodItem" asp-action="Update" class="form-body">


	<input type="hidden" asp-for="@Model.FoodItemId" class="form-control" placeholder="@Model.FoodItemId">

	<div class="form-flex">
		<div class="form-group form-group-style">
			<lable class=" controle-lable lable-style"> Name</lable>
			<input type="text" asp-for="@Model.Name" class="form-control" placeholder="@Model.Name">
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class="form-group form-group-style">
			<lable class="controle-lable lable-style"> Description</lable>
			<input type="text" asp-for="@Model.Description" class="form-control" placeholder="@Model.Description">
			<span asp-validation-for="@Model.Description" class="text-danger"></span>
		</div>
		<div class="form-group form-group-style">
			<lable class="controle-lable lable-style"> Price</lable>
			<input type="text" asp-for="@Model.Price" class="form-control" placeholder="@Model.Price">
			<span asp-validation-for="@Model.Price" class="text-danger"></span>
		</div>
		<div class="form-group form-group-style">
			<lable class="controle-lable lable-style">Category</lable>
			<select asp-for="@Model.FoodCategoryId" asp-items="@Categories" class="form-control form-select"></select>
			<span asp-validation-for="@Model.Price" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group lable-div-style">
		@Html.CheckBoxFor(m=>m.IsAvaliabe,Model.IsAvaliabe)
		<lable class="controle-lable lable-style lable-checkbox-style">IsAvaliabe</lable>
		<span asp-validation-for="@Model.IsAvaliabe" class="text-danger"></span>
	</div>
	<div class="form-group form-group-margin form-header-3">
		<input type="submit" value="update" class="btn btn-outline-success float-right" />
	</div>
</form>