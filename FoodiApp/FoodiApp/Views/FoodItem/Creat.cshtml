@model CreatFoodItemDTO

@{
	ViewData["Title"] = "Creat Food Item";
	var Categories = new SelectList(ViewBag.Categories, "FoodCategoryId", "Name");
}

<div class="form-header-style">
	<h3>Add new Food Item</h3>
</div>
<form method="Post" enctype="multipart/form-data" asp-controller="FoodItem" asp-action="Creat" class="form-body">
	@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
	{
		<div class="form-flex">
			<div class="form-group form-group-style">
				<lable class=" controle-lable lable-style"> Name</lable>
				<input type="text" asp-for="@Model.Name" class="form-control">
				<span asp-validation-for="@Model.Name" class="text-danger"></span>
			</div>
			<div class="form-group form-group-style">
				<lable class="controle-lable lable-style"> Description</lable>
				<input type="text" asp-for="@Model.Description" class="form-control"></input>
				<span asp-validation-for="@Model.Description" class="text-danger"></span>
			</div>
			<div class="form-group form-group-style">
				<lable class="controle-lable lable-style"> Price</lable>
				<input type="text" asp-for="@Model.Price" class="form-control">
				<span asp-validation-for="@Model.Price" class="text-danger"></span>
			</div>
			<div class="form-group form-group-style">
				<lable class="controle-lable lable-style">Category</lable>
				<select asp-for="@Model.FoodCategoryId" asp-items="@Categories" class="form-control form-select"></select>
				<span asp-validation-for="@Model.Price" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group lable-div-style">
			@Html.CheckBoxFor(m=>m.IsAvaliabe)
			<lable class="controle-lable lable-style lable-checkbox-style">IsAvaliabe</lable>
			<span asp-validation-for="@Model.IsAvaliabe" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label for="formFile" class="form-label">Image</label>
			<input class="form-control" type="file" id="formFile" asp-for="@Model.ImageFile">
			<span asp-validation-for="@Model.ImageFile" class="text-danger"></span>

		</div>
		<div class="col-auto py-4 mx-4 d-none d-lg-block">
			@if (Model.ImageUrl != null)
			{
				<img src="@Model.ImageFile.OpenReadStream()" alt="..." class=" food-item-image img-thumbnail rounded float-start">
			}
		</div>
		<div class="form-group form-group-margin form-header-3">
			<input type="submit" value="create" class="btn btn-outline-success float-right" />
		</div>
	}
</form>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
		}

